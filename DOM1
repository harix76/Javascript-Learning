<script>

    function Addlang (langName){
        const li = document.createElement('li')
        li.innerHTML = `${langName}`
        document.querySelector('.unorderedlist').appendChild(li)

    } 

    function addOptiLangauge (langName){
        const li = document.createElement('li')
        li.appendChild(document.createTextNode(langName))
        document.querySelector('.langauge').appendChild(li)
    }
    
addOptiLangauge("go langauge")


//edit 

const secondLanagauge = document.querySelector("li:nth-child(2)")
const newLi = document.createElement('li') 
newLi.textContent = "mojo"
secondLanagauge.replaceWith(newLi)

const Lanagauge = document.querySelector("li:nth-child(2)")
Lanagauge.remove()
</script>
